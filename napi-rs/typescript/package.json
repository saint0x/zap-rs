{
  "name": "@zap-rs/core",
  "version": "0.1.0",
  "description": "High-performance web framework written in Rust",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
